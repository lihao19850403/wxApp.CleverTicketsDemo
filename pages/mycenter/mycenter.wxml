<!--pages/mycenter/mycenter.wxml-->

<view class="amountBg">
  <view class="img">
    <image style="width:49px;height:49px;" src="{{userInfo.avatarUrl}}" type="cover"></image>
  </view>
  <view class="account">
    <view>{{userInfo.nickName}}</view>
    <view>帐号管理</view>
  </view>
  <view class="nav">></view>
</view>
<view class="content">
  <view class="order">
    <view class="desc">
      <view>
        <image src="../../images/mine_icons/mine_train.png" style="width:22px;height:25px;"></image>
      </view>
      <view>火车票订单</view>
    </view>
    <view class="desc">
      <view>
        <image src="../../images/mine_icons/mine_ticket.png" style="width:22px;height:25px;"></image>
      </view>
      <view>抢票订单</view>
    </view>
    <view class="desc">
      <view>
        <image src="../../images/mine_icons/mine_airplain.png" style="width:22px;height:25px;"></image>
      </view>
      <view>机票订单</view>
    </view>
    <view class="desc">
      <view>
        <image src="../../images/mine_icons/mine_all.png" style="width:22px;height:25px;"></image>
      </view>
      <view>全部订单</view>
    </view>
  </view>
  <view class="clear"></view>
  <view class="item">
    <view class="icon">
      <image src="../../images/menu_icons/money.png" style="width:22px;height:22px;"></image>
    </view>
    <view class="itemName">
      <view>我的财富</view>
      <view class="remark">0个加速币</view>
    </view>
    <view class="right">
      <text class="opr">领取加速包</text>>
    </view>
  </view>
  <view class="line"></view>
  <view class="item">
    <view class="icon">
      <image src="../../images/menu_icons/travel.png" style="width:22px;height:22px;"></image>
    </view>
    <view class="itemName">
      <view>出行服务</view>
    </view>
    <view class="right">
      <text class="opr">正晚点/时刻表</text>>
    </view>
  </view>
  <view class="hr"></view>
  <view class="item">
    <view class="icon">
      <image src="../../images/menu_icons/invate.png" style="width:22px;height:22px;"></image>
    </view>
    <view class="itemName">
      <view>邀请好友</view>
    </view>
    <view class="right" bindtap="grabTicket">
      <text class="opr_link">一起来抢票</text>>
    </view>
  </view>
  <view class="hr"></view>
  <view class="item">
    <view class="icon">
      <image src="../../images/menu_icons/message.png" style="width:22px;height:22px;"></image>
    </view>
    <view class="itemName">
      <view>消息中心</view>
    </view>
    <view class="right">
      <text class="opr">在线服务</text>>
    </view>
  </view>
  <view class="hr"></view>
  <view class="item">
    <view class="icon">
      <image src="../../images/menu_icons/advise.png" style="width:22px;height:22px;"></image>
    </view>
    <view class="itemName">
      <view>产品意见</view>
    </view>
    <view class="right">></view>
  </view>
  <view class="hr"></view>
  <view class="item">
    <view class="icon">
      <image src="../../images/menu_icons/more.png" style="width:22px;height:22px;"></image>
    </view>
    <view class="itemName">
      <view>更多</view>
    </view>
    <view class="right">></view>
  </view>
</view>